{
  "manifest_version": 3,
  "name": "Short-Form Time Meter & Fun Facts",
  "version": "2.0",
  "description": "Tracks total daily time spent on YouTube Shorts, TikTok, and Instagram Reels, shows a meter, and pop-up fun facts to nudge breaks.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.tiktok.com/*",
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}

